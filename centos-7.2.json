{

  "builders": [{
    "type": "virtualbox-iso",
    "boot_wait": "10s",
    "boot_command": [
      "<esc><wait>linux vmlinuz inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/{{ user `kickstart` }} biosdevname=0 net.ifnames=0<enter>"
    ],
    "disk_size": "{{user `disk_size`}}",
    "guest_additions_path": "VBoxGuestAdditions.iso",
    "guest_os_type": "RedHat_64",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "iso_url": "file:///{{ pwd }}/iso/{{ user `iso_name` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "{{ user `iso_checksum_type` }}",
    "output_directory": "output-centos-7.2-x86_64-{{build_type}}",
    "vm_name": "centos-7.2",
    "ssh_timeout": "{{ user `ssh_timeout` }}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }], 

  "provisioners": [
  {
    "type": "shell",
    "environment_vars": [
      "SSH_USERNAME={{ user `ssh_username` }}",
      "SSH_PASSWORD={{ user `ssh_password` }}",
      "PUPPET_REPO={{ user `puppet_repo` }}"
      ],
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
    "pause_before": "5s",
    "scripts": [
      "scripts/virtualbox.sh",
      "scripts/vagrant.sh",
      "scripts/sshd.sh",
      "scripts/motd.sh",
      "scripts/locale.sh",
      "scripts/puppet.sh"
    ]
  },

  {
    "type": "puppet-masterless",
    "execute_command": "echo 'vagrant' | sudo -S -E {{ .FacterVars }} PATH=$PATH:/opt/puppetlabs/bin /opt/puppetlabs/bin/puppet apply --verbose --detailed-exitcodes --modulepath='{{ .ModulePath }}' {{ .ManifestFile }}",
    "facter" : {
      "fqdn" : "{{ user `vm_name` }}"
    },
    "manifest_file": "puppet/manifests/default.pp",
    "module_paths": [
      "puppet/modules/local",
      "puppet/modules/sites",
      "puppet/modules/thirdparty"
      ],
      "prevent_sudo": true
  },

  {
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
    "pause_before": "5s",
    "scripts": [
    "scripts/cleanup.sh",
    "scripts/rc.local.sh"
    ]
  }],

  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{ user `compression_level` }}",
    "output": "box/{{ .Provider }}/centos-7.2-x86_64-{{ .Provider }}.box"
  }],

  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "65536",
    "headless": "",
    "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-Minimal-1511.iso",
    "kickstart": "anaconda-ks7.cfg",
    "memory": "512",
    "mirror": "http://mirrors.kernel.org/centos",
    "puppet_repo": "puppetlabs-release-pc1-el-7",
    "ssh_timeout": "60m",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "virtualbox_guest_os_type": "RedHat_64",
    "vm_name": "centos-7-2-1511"
  }

}
